{
  "include": ["src/*.ts", "../index.ts", "src/api/index.api.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,

    "strict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  }
}